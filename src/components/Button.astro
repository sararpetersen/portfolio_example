---
import { style } from "motion";

const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "px-6 p-2 font-semibold rounded-[5px] transition duration-300 uppercase";

const variantClasses = {
  primary: "main-button text-gray-50 bg-red-700 hover:bg-red-800 hover:border-red-800 focus:outline-none focus:ring-2 focus:ring-red-300 ease-in-out",
  secondary:
    "secondary-button text-gray-50 bg-gray-800 hover:bg-gray-700 hover:border-gray-700 focus:outline-none focus:ring-2 focus:ring-red-300 ease-in-out",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-[14px]",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>

<style>
  body.dark .main-button {
    background-color: transparent;
    color: #f6f6f6;
    border: #f6f6f6 1px solid;
    font-weight: 700;
  }

  body.dark .main-button:hover {
    background-color: #d3302f;
    color: #f6f6f6;
    border: #d3302f 1px solid;
  }

  body.dark .secondary-button {
    background-color: transparent;
    color: #f6f6f6;
    border: #f6f6f6 1px solid;
    font-weight: 700;
  }

  body.dark .secondary-button:hover {
    background-color: #4f4f4f;
    color: #f6f6f6;
    border: #4f4f4f 1px solid;
  }
</style>
